<div>
  <%= form_with(model: category, class: "contents") do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label "Nome" %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>


    <div class="my-5">
      <%= form.label "Descrição" %>
      <%= form.text_field :description, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div>
      <%= form.label "Tipo de categoria" %>
      <%= form.select :cat_sub, all_available_categories, { prompt: "Selecione o tipo" }, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="flex justify-between items-center mt-6">
      <button type="button" data-action="dialog-modal#hideModal" class="btn btn-error max-w-sm">Cancelar</button>   
      <%= form.submit "Criar", class: "btn btn-success max-w-sm" %>
    </div>

  <% end %>
</div>
