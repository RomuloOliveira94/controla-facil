<div class="w-full">
  <% content_for :title, "Gastos" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl md:text-4xl">Gastos</h1>
    <%= link_to new_expense_path, class: "btn btn-primary btn-sm md:btn-md" do %>
      <i class="fa-solid fa-plus text-xl"></i> 
      <span class="text-lg">Adicionar nova despesa</span>
    <% end %>
  </div>

  <div id="expenses" class="overflow-x-auto my-6">
    <%= render 'shared/desktop_table', values: @expenses %>
    <%= render 'shared/mobile_table', values: @expenses %>
  </div>
</div>
