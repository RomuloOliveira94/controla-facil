<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Gastos" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl md:text-4xl">Gastos</h1>
    <%= link_to "Novo Gasto", new_expense_path, class: "btn btn-primary btn-sm md:btn-md" %>
  </div>

  <div id="expenses" class="overflow-x-auto my-6">
    <%= render 'shared/desktop_table', values: @expenses %>
    <%= render 'shared/mobile_table', values: @expenses %>
  </div>
</div>
