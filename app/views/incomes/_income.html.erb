<div id="<%= dom_id income %>" class="grid gap-3">
  <p class="grid md:flex gap-2">
    <strong class="block font-medium">
      <i class="fas fa-money-bill"></i>
      Valor:
    </strong>
    <span>
      <%= format_brl_currency(income.value) %>
    </span>
  </p>
  <p class="grid md:flex md:flex-wrap gap-2">
    <strong class="block font-medium">
      <i class="fas fa-align-left"></i>
      Descrição:
    </strong>
    <span class="break-all md:break-normal">
      <%= income.description %>
    </span>
  </p>
  <% if income.fixed %>
    <div class="flex items-center gap-2">
      <strong class="block font-medium">
        <i class="fas fa-check"></i>
        Todo dia:
      </strong>
      <%= income.day %>
    </div>
  <% end %>
  <p class="grid md:flex gap-2">
    <strong class="block font-medium mb-1">
      <i class="fas fa-calendar-day"></i>
      Balanço do Mês:
    </strong>
    <%= income.balance.month %>
  </p>
  <p class="grid md:flex gap-2">
    <strong class="block font-medium mb-1">
      <i class="fas fa-tags"></i>
      Categoria:
    </strong>
    <%= income.category.name %>
  </p>
</div>
