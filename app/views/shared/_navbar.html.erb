<!-- component -->
<nav class="bg-ghost shadow shadow-gray-100 w-100 px-8 md:px-auto h-full" data-controller="nav-bar">
  <div class="md:h-16 mx-auto md:px-4 container flex items-center justify-between flex-wrap md:flex-nowrap h-full gap-2 max-md:pb-4">
    <!-- Logo -->
    <div class="md:order-1 flex gap-2 items-center">
      <% if current_user&.avatar&.attached? %>
        <%= link_to dashboard_path do %>
          <%= image_tag current_user.avatar, class: "rounded-full h-12 w-12 object-cover" %>
        <% end %>
        <div>
          <h1 class="font-bold">Controla Fácil</h1>
          <span>Olá <strong><%= current_user.first_name.capitalize %></strong></span>
        </div>
      <% end %>
    </div>
    <div class="text-gray-500 order-3 w-full md:w-auto md:order-2" data-nav-bar-target="toggle">
      <ul class="flex font-semibold justify-between gap-4 flex-col md:flex-row">
        <!-- Active Link = text-indigo-500
                Inactive Link = hover:text-indigo-500 -->
        <li class="md:px-4 md:py-2 hover:text-indigo-400"><%= link_to 'Dashboard', dashboard_path, data: { nav_bar_target: "links" }  %></li>
        <li class="md:px-4 md:py-2 hover:text-indigo-400"><%= link_to 'Gastos', expenses_path, data: { nav_bar_target: "links" } %></li>
        <li class="md:px-4 md:py-2 hover:text-indigo-400"><%= link_to 'Ganhos', incomes_path, data: { nav_bar_target: "links" } %></li>
        <li class="md:px-4 md:py-2 hover:text-indigo-400"><%= link_to 'Perfil', profile_path, data: { nav_bar_target: "links" } %></li>
        <li class="md:px-4 md:py-2 hover:text-indigo-400"><%= link_to 'Configurações', configurations_path, data: { nav_bar_target: "links" } %></li>
        <li class="md:hidden">
          <button class="px-4 py-2 bg-primary text-gray-50 rounded-xl flex items-center gap-2">
            <h1>Login</h1>
          </button>
        </li>
      </ul>
    </div>
    <div class="order-2 md:order-3 md:hidden" data-nav-bar-target="btn">
      <button class="px-4 py-2  text-gray-50 rounded-xl flex items-center gap-2" data-action="nav-bar#toggle">
        <!-- Heroicons - Login Solid -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary" viewBox="0 0 24 24"><path fill="currentColor" fill-rule="evenodd" d="M3.464 20.536C4.93 22 7.286 22 12 22c4.714 0 7.071 0 8.535-1.465C22 19.072 22 16.714 22 12s0-7.071-1.465-8.536C19.072 2 16.714 2 12 2S4.929 2 3.464 3.464C2 4.93 2 7.286 2 12c0 4.714 0 7.071 1.464 8.535M18.75 16a.75.75 0 0 1-.75.75H6a.75.75 0 0 1 0-1.5h12a.75.75 0 0 1 .75.75M18 12.75a.75.75 0 0 0 0-1.5H6a.75.75 0 0 0 0 1.5zM18.75 8a.75.75 0 0 1-.75.75H6a.75.75 0 0 1 0-1.5h12a.75.75 0 0 1 .75.75" clip-rule="evenodd"/></svg>
      </button>
    </div>
    <% if user_signed_in? %>
      <div class="order-2 md:order-3 max-md:hidden">
        <button class="px-4 py-2 bg-error text-gray-50 rounded-xl flex items-center gap-2">
          <%= link_to 'Sair', logout_path, data: { "turbo-method": :delete } %>
        </button>
      </div>
    <% else %>
      <div class="order-2 md:order-3 max-md:hidden">
        <button class="px-4 py-2 bg-primary text-gray-50 rounded-xl flex items-center gap-2">
          <%= link_to 'Entrar', login_path %>
        </button>
      </div>
    <% end %>
  </div>
</nav>